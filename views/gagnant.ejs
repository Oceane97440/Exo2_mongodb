    <div class="container">
            <div class="row">
                    <hr>
                    <h4 class="text-center" style="padding-top: 20px;">Notre gagnant du jour :)</h4>
                    <hr>
                <!-- <div class="col-md-2"></div> -->
                <div class="col-md-8 offset-md-4" style="margin-top: 30px; text-align: center" >
                
                        <% if (user) { %>
                      
                    
                        <div class="card align-items-center text-white bg-dark  mb-3 " style="width: 18rem;">
                            <img class="img-thumbnail rounded-circl mx-auto d-block" src="uploads/<%= user[0].photo %>" alt="<%= user[0].photo %>" height="200" width="150"
                            style="border-radius: 85px;margin: 10px;">
                            <div class="card-body">
                                <hr>
                                <p class="card-text"><%= user[0].nom %> <%= user[0].prenom %></p>

                                <hr>
                              <p class="card-text">Genre: <%= user[0].genre %></p>
                              <p class="card-text">Ville: <%= user[0].ville %></p>
                              <p class="card-text">Domaine: <%= user[0].domaine %></p>
                              <p class="card-text">Date aniverssaire:<br> <%= user[0].dob %></p>
                    
                    
                    
                    
